*{
  box-sizing: border-box;
  text-decoration: none;
  list-style-type: none;
  padding: 0;
  margin: 0;
  text-rendering: optimizeLegibility;
  -webkit-tap-highlight-color:rgba(255,255,255,0);
}
.mh-clearfix{
  &:after{
    content: '';
    display: table;
    clear: both;
  }
}
textarea{
  resize:none;
}
.left{
  float: left;
}
.right{
  float: right;
}
.all-head{
  height: .9rem;
  position: relative;
  border-bottom: 1px solid #dddddd;
  background-color: white;

  .leftIcon{
    position: absolute;
    left: 0;
    top: 0;
    padding-left: .36rem;
    height: .9rem;
    width: 1rem;
    svg{
      position: absolute;
      left: .36rem;
      top: 50%;
      transform: translateY(-50%);
      font-size: .4rem;
    }
  }

  .all-title{
    text-align: center;
    line-height: .9rem;
    font-size: .36rem;
  }
}
html {
  font-size: calc(50/375*100vw);
}
body{
  font-family:"Microsoft YaHei", "Helvetica Neue",Helvetica,Arial,sans-serif;
  font-size: 0.24rem;
}
.icon {
  width: 1em; height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
  color: #000;
}
.ell{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.vux-loading{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 999;
  left: 0;
  top: 0;
}
.touch{
  overflow: auto !important;
}
.mask{
  position: fixed;
  left: 0;
  top:0;
  z-index: 450;
  background-color: rgba(0,0,0,.5);
  width: 100%;
  height: 100%;
}
img{
  width: 100%;
  height:100%;
}
#container{
  width: 100%;
  position: relative;
}
a:focus,a:link,a:hover{
  -webkit-tap-highlight-color:transparent
}
input{
  background-color: transparent;
}
html,body{
  line-height: 1.5;
  word-wrap:break-word;
}

::-webkit-scrollbar {
  display: none;
}
a:hover{
  text-decoration:none;
}
::-webkit-input-placeholder {
  color: #bcbcbc;
}
:-moz-placeholder {
  color: #bcbcbc;
}
::-moz-placeholder {
  color: #bcbcbc;
}
:-ms-input-placeholder {
  color: #bcbcbc;
}

.uplistItem {
  transition: all 1s;
}
.uplist-enter, .uplist-leave-to{
  opacity: 0;
  transform: translateY(100px);
}
.uplist-leave-active {
  position: absolute;
}

/*动画三组*/
.fade-enter-active, .fade-leave-active {
  transition: opacity .3s ease;
}
.fade-enter, .fade-leave-to {
  opacity: 0;
}


.weui-toast{
  padding: 5px 10px;
  line-height: 1.2;
}
a{
  display: block;
  height: 100%;
  overflow: hidden;
  vertical-align: middle;
  color: inherit;
}
header,footer,section,article,aside,nav,address,figure,figcaption,menu,details{display:block;}
@media screen and (min-width: 280px) {
  html { font-size: 37.333333333333333px; }
}
@media screen and (min-width: 320px) {
  html { font-size: 40.6666666666666666667px; }
}
@media screen and (min-width: 360px) {
  html { font-size: 50px; }
}
@media screen and (min-width: 400px) {
  html { font-size: 53.333333333333333333333px; }
}
@media screen and (min-width: 440px) {
  html { font-size: 58.666666666666666666667px; }
}
@media screen and (min-width: 480px) {
  html { font-size: 64px; }
}
@media screen and (min-width: 640px) {
  html { font-size: 100px; }
}